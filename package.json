{
  "name": "dev-base-files-vanilla",
  "version": "1.0.0",
  "description": "A simple frontend development base files",
  "main": "index.js",
  "scripts": {
    "sass": "cd ./App/src/styles && sass --watch sass:css",
    "watch": "browser-sync start --server ./App --files './App/*.html, ./App/src/*/*/*.css, ./App/src/*/*.js'",
    "start": "npm run sass & npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sass",
    "html",
    "css",
    "frontend",
    "browsersync"
  ],
  "author": {
    "name": "Akinkunmi Mustapha",
    "email": "akinkunmiMustapha1@gmail.com"
  },
  "license": "BSD",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "sass": "^1.32.5"
  }
}
